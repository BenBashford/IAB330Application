<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Landing">


    <LinearLayout
        android:id="@+id/navbarLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >


        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Home"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="@color/font_color1"
            />

        <ImageView
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_home_24"
            android:clickable="true"
            android:onClick="onImageViewClick"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            />

        <ImageView
            android:id="@+id/critical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_call_24"
            android:clickable="true"
            android:onClick="onImageViewClick"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            />

        <ImageView
            android:id="@+id/nearby"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_location_on_24"
            android:clickable="true"
            android:onClick="onImageViewClick"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            />

        <ImageView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/baseline_settings_24"
            android:clickable="true"
            android:onClick="onImageViewClick"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/logo"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/emergency_red_siren_or_rescue_design_free_vector"
        app:layout_constraintTop_toBottomOf="@+id/navbarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/contactButton"
        android:backgroundTint="@color/bg_color2"
        android:textColor="@color/bg_color1"
        android:layout_margin="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Emergency Services"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/description"
        android:layout_margin="40dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/font_color1"
        android:padding="10dp"
        android:text="An all-in-one emergency app that helps users report various emergencies, provides location-based recommendations, supports multiple languages, and offers real-time tracking and notifications for swift assistance."
        app:layout_constraintTop_toBottomOf="@+id/contactButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/servicesButton"
        android:backgroundTint="@color/bg_color2"
        android:textColor="@color/bg_color1"
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Services Near You"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/categoriesButton"
        android:backgroundTint="@color/bg_color2"
        android:textColor="@color/bg_color1"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Categories"
        app:layout_constraintTop_toBottomOf="@+id/servicesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>